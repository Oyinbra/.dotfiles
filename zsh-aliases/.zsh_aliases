# ##############################################
# ################### APT ######################
# ##############################################

# UPDATE and INSTALL PACKAGES
alias uu-apt="sudo apt update && sudo apt upgrade"
alias ud-apt="sudo apt update"
alias ug-apt="sudo apt upgrade"
alias get-apt="sudo apt-get update && apt-get upgrade"
# Delete apt-repo
alias r-apt="sudo add-apt-repository --remove"
# Add apt-repo
alias a-apt="sudo add-apt-repository"
# List Upgradable packages
alias l-apt='apt list --upgradable'
# Clean Packages
alias c-apt='sudo apt autoclean && sudo apt autoremove'


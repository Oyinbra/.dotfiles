alias i-nala="sudo nala install"
alias r-nala="sudo nala remove"

# ##############################################
# ################### PACMAN ###################
# ##############################################

# UPDATE and INSTALL PACKAGES
alias ud-pacman="sudo pacman -Sy"
alias ug-pacman="sudo pacman -Syu"
alias uu-pacman="sudo pacman -Syyu"
alias i-pacman="sudo pacman -Syu"
alias r-pacman="sudo pacman -R"
# Install pkg files
alias ip-pacman="sudo pacman -U"
# List packages in pkg cache file
alias lp-pacman="ls /var/cache/pacman/pkg | less"
# Clean uninstalled packages from cache
alias cup-pacman="sudo pacman -Sc"
# Clean all packages from cache
alias cap-pacman="sudo pacman -Scc"
# List orphan packages
alias lop-pacman="sudo pacman -Qtdq"
# Remove orphan packages
alias rop-pacman="sudo pacman -R $(pacman -Qtdq)"


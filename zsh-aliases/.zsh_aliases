# ##############################################
# ################### PACMAN ###################
# ##############################################

# UPDATE and INSTALL PACKAGES
alias archupdate="sudo pacman -Syyu"
alias pac.ud="sudo pacman -Sy"
alias pac.ug="sudo pacman -Syu"
alias pac.i="sudo pacman -S"
alias pac.r="sudo pacman -R"
# Downgrade Packages
alias pac.dg="sudo pacman -Suu"
# Install pkg files
alias pac.ip="sudo pacman -U"
# List packages in pkg cache file
alias pac.lp="ls /var/cache/pacman/pkg | less"
# Clean uninstalled packages from cache
alias pac.cup="sudo pacman -Sc"
# Clean alien packages
alias pac.c="sudo pacman -c"
# Clean all packages from cache
alias pac.cap="sudo pacman -Scc"
# List orphan packages
alias pac.lop="sudo pacman -Qtdq"
# Remove orphan packages
alias pac.rop="sudo pacman -R $(pacman -Qtdq)"
# Pactree
alias pac.t="pactree -r"


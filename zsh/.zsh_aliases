# ##############################################
# ################### APT ######################
# ##############################################

# UPDATE and INSTALL PACKAGES
alias auu="sudo apt update && sudo apt upgrade"
alias nud="sudo apt update"
alias nug="sudo apt upgrade"
alias agu="sudo apt-get update && apt-get upgrade"
# Delete apt-repo
alias adel="sudo add-apt-repository --remove"
# Add apt-repo
alias aadd="sudo add-apt-repository"
# List Upgradable packages
alias alu='apt list --upgradable'
# Clean Packages
alias clean='sudo apt autoclean && sudo apt autoremove'

# ##############################################
# ################### NALA #####################
# ##############################################

# UPDATE and INSTALL PACKAGES
alias nuu="sudo nala update && sudo nala upgrade"
alias nud="sudo nala update"
alias nug="sudo nala upgrade"
alias ninstall="sudo nala install"
alias nremove="sudo nala remove"

# ##############################################
# ################### PACMAN ###################
# ##############################################

# UPDATE and INSTALL PACKAGES
alias pud="sudo pacman -Sy"
alias pug="sudo pacman -Syu"
alias puu="sudo pacman -Syyu"
alias pinstall="sudo pacman -S"
alias premove="sudo pacman -R"

# ##############################################
# ################### YAY ######################
# ##############################################

# UPDATE and INSTALL PACKAGES
alias yud="sudo yay -Sy"
alias yug="sudo yay -Syu"
alias yuu="sudo yay -Syyu"

# ##############################################
# ############### FLATPAK ######################
# ##############################################

alias finstall="flatpak install"
alias fremove="flatpak remove"


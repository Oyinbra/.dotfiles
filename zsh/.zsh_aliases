# ##############################################
# ############## DIRECTORY ALIASES #############
# ##############################################

# Refresh zsh
alias rf="source ~/.zshrc"

# Zsh config
alias zshconfig="gedit ~/.zshrc"

# Bash config
alias bashconfig="gedit ~/.bashrc"

# Neofetch Distro
alias nfconfig="gedit ~/.config/neofetch/config.conf"

# Zsh aliases config
alias aliasconfig="gedit ~/.zsh_aliases"

# Dotfiles
alias dotfiles="~/.dotfiles"

# Work Directory
alias w="cd ~/Workspace"

# Project Directory
alias p="cd ~/Workspace/projects"

# Repository Packages
alias repos="~/Repos"

# Coinmarketcapital
alias cmc='py ~/Workspace/Python/cmc.py'

# ##############################################
# ############## ACTION ALIASES ################
# ##############################################

# Check Git current version
alias gv="git --version"

# Watch SASS and output to dist folder
alias wsod="sass --watch scss:dist/css"

# List Color
alias ls="ls --color=auto"
# List All
alias la="ls -all"

# Python
alias py="python3"
alias python="python3"

# Python version
alias pv="py --version"

# Pip3 List
alias pl="pip3 list"

# Switch Python Version
alias pyconfig="sudo update-alternatives --config python3"

# Delete locked Directory or files
alias rmv="rm -rf"

# List Users
alias lusers="cat /etc/passwd"

# Hibernate
alias hbn='sudo systemctl hibernate'

# Nethogs
alias nethogs="sudo nethogs"
